<Window x:Class="RambleWPF.鼠标框选2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RambleWPF"
        mc:Ignorable="d"
        Title="鼠标框选2" Height="450" Width="800"
         xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF" 
        Loaded="Window_Loaded" ContentRendered="Window_ContentRendered" 
        
        >
    <Canvas x:Name="cav_root">
        <Canvas x:Name="mask"></Canvas>
        <vlc:VideoView Name="main_video"   >
            <Grid Name="mainCanvas" ShowGridLines="True"  MouseMove="MainCanvas_MouseMove" MouseLeftButtonUp="MainCanvas_MouseLeftButtonUp" MouseLeftButtonDown="MainCanvas_MouseLeftButtonDown">
                <Button x:Name="Get"  Width="100" Height="60" Content="按钮"  Canvas.Right="30" Canvas.Bottom="30" Cursor="Hand" Click="Get_Click" Margin="0,0,0,0"></Button>
            </Grid>
        </vlc:VideoView>
        
        
    </Canvas>
</Window>
