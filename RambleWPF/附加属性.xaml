<Window x:Class="RambleWPF.附加属性"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RambleWPF"
          
        mc:Ignorable="d"
        Title="附加属性" Height="450" Width="800">
    <Grid>
        <!--第二种方法,写一个附加属性，在属性改变时，给textbox添加上相应事件，这个写完后，复用时就方便喽-->
        <!--<TextBox local:TextBoxAttachedProperties.IsOnlyNumber="true" Margin="10"/>-->

        <TextBox x:Name="tb_search" TextInput="tb_search_TextInput" TextChanged="tb_search_TextChanged"> </TextBox>
    </Grid>
</Window>
