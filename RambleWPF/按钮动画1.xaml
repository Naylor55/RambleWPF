<Window x:Class="RambleWPF.按钮动画1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RambleWPF"
        mc:Ignorable="d"
        Title="按钮动画1" Height="450" Width="800" Name="win" >
    <Grid x:Name="gridRoot" Margin="0">
        <StackPanel Margin="0">
            <Button x:Name="buttonTest" Content=" a  button" Width="100" Height="50" Click="buttonTest_Click"></Button>
            <Button x:Name="btn_big" Content="放大按钮" Width="80" Height="50"  Click="btn_big_Click"></Button>
            <Button x:Name="btn_small" Content="缩小按钮" Width="80" Height="50" Click="btn_small_Click" ></Button>
            <Button x:Name="btn_2" Content="放大窗体" Width="100" Height="50" Click="btn_2_Click"></Button>
            <Button x:Name="btn_3" Content="缩小窗体" Width="100" Height="50"  Click="btn_3_Click"></Button>
            <Button x:Name="btn_4" Content="改变窗体leftAndTop" Width="100" Height="50" Click="btn_4_Click"></Button>
            <Button x:Name="btn_5" Content="窗体全屏" Width="100" Height="50" Click="btn_5_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
